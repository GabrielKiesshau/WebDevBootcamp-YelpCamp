<%- include('../partials/header') %>

<div class='container'>
    <div>
        <h1 style='text-align: center'>Create a New Campground</h1>

        <div class='text-center' style='width: 80%; margin: 25px auto;'>
            <form action='/campgrounds' method='POST'>
                <div class="form-group row justify-content-center">
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="campground[name]" placeholder='Name'>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-sm-6">
                        <input type="number" class="form-control" name="campground[price]" placeholder='0.00' min='0.01' step='0.01'>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="campground[description]" placeholder='Description'>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="campground[image]" placeholder='Image URL'>
                    </div>
                </div>
                <button class='col-sm-6 btn btn-lg btn-primary margin-auto'>Submit</button>
            </form>
            <a href='/campgrounds'>Go back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>